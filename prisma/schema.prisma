generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String @id @db.VarChar(36)
  login     String @db.VarChar(30)
  password  String @db.VarChar(30)
  version   Int
  createdAt String
  updatedAt String
}

model artists {
  id     String   @id @db.VarChar(36)
  name   String   @db.VarChar(30)
  grammy Boolean
  albums albums[]
}

model albums {
  id       String   @id @db.VarChar(36)
  name     String   @db.VarChar(30)
  year     Int
  artistId String?  @db.VarChar(36)
  artists  artists? @relation(fields: [artistId], references: [id], onUpdate: NoAction, map: "artistId_fkey")
}
