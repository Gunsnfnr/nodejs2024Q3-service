generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String @id @db.VarChar(36)
  login     String @db.VarChar(30)
  password  String
  version   Int
  createdAt String
  updatedAt String
}

model artists {
  id     String   @id @db.VarChar(36)
  name   String   @db.VarChar(30)
  grammy Boolean
  albums albums[]
  tracks tracks[]
}

model albums {
  id       String   @id @db.VarChar(36)
  name     String   @db.VarChar(30)
  year     Int
  artistId String?  @db.VarChar(36)
  artists  artists? @relation(fields: [artistId], references: [id], onUpdate: NoAction, map: "artistId_fkey")
  tracks   tracks[]
}

model tracks {
  id       String   @id @db.VarChar(36)
  name     String   @db.VarChar(30)
  artistId String?  @db.VarChar(36)
  albumId  String?  @db.VarChar(36)
  duration Int
  albums   albums?  @relation(fields: [albumId], references: [id], onUpdate: NoAction, map: "albumId_fkey")
  artists  artists? @relation(fields: [artistId], references: [id], onUpdate: NoAction, map: "artistId_fkey")
}

model fav_albums {
  id       String  @id @db.VarChar(36)
  name     String  @db.VarChar(30)
  year     Int
  artistId String? @db.VarChar(36)
}

model fav_artists {
  id     String  @id @db.VarChar(36)
  name   String  @db.VarChar(30)
  grammy Boolean
}

model fav_tracks {
  id       String  @id @db.VarChar(36)
  name     String  @db.VarChar(30)
  artistId String? @db.VarChar(36)
  albumId  String? @db.VarChar(36)
  duration Int
}
